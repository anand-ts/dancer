<plist version="1.0">
<dict>
    <key>com.apple.security.device.audio-input</key>
    <true/>
    <key>com.apple.security.device.camera</key>
    <true/>
    <key>NSMicrophoneUsageDescription</key>
    <string>This app needs access to the microphone to capture system audio for music visualization.</string>
